{% extends 'base.html.twig' %}

{% block title %}Lista de Empresas{% endblock %}

{% block body %}
    <h1>Lista de Empresas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>CNPJ</th>
                <th>Quantidade de Sócios</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            {% for empresa in empresas %}
                <tr>
                    <td>{{ empresa.nome }}</td>
                    <td>{{ empresa.cnpj }}</td>
                    <td>{{ empresa.socios|length }}</td>  {# Contagem de sócios #}
                    <td>
                        <a href="{{ path('empresa_edit', {'id': empresa.id}) }}" class="btn btn-warning">Editar</a>
                        <a href="{{ path('empresa_delete', {'id': empresa.id}) }}" class="btn btn-danger">Remover</a>
                        <a href="{{ path('socio_index', {'empresaId': empresa.id}) }}" class="btn btn-secondary">Listar Sócios</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Nenhuma empresa encontrada.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('empresa_new') }}" class="btn btn-success">Cadastrar Nova Empresa</a>
{% endblock %}
