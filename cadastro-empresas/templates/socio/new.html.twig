{% extends 'base.html.twig' %}

{% block title %}Cadastrar Sócio{% endblock %}

{% block body %}
    <h1>Cadastrar Sócio</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nome) }}
            {{ form_widget(form.nome, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nome) }}
        </div>

        <div class="form-group">
            {{ form_label(form.cpf) }}
            {{ form_widget(form.cpf, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.cpf) }}
        </div>

        <div class="form-group">
            {{ form_label(form.empresa) }}
            {{ form_widget(form.empresa, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.empresa) }}
        </div>

        <div class="form-group div-botoes-rodape">
            <button class="btn btn-success">Salvar</button>
            <a href="{{ path('socio_index', {'empresaId': app.request.get('empresaId')}) }}" class="btn btn-secondary">Voltar à lista</a>
        </div>
    {{ form_end(form) }}
{% endblock %}
